KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=streamforge-ingestor
KAFKA_TOPIC_TICKS=ticks

KAFKA_ACKS=all            # all / 1 / 0
KAFKA_MAX_IN_FLIGHT=5     # per connection, keep small for ordering
KAFKA_LINGER_MS=5         # small batching without much latency
KAFKA_BATCH_BYTES=1048576 # 1 MiB
KAFKA_RETRIES=5
KAFKA_RETRY_BACKOFF_MS=100
KAFKA_IDEMPOTENT=true     # enables exactly-once per session semantics
KAFKA_COMPRESSION=lz4     # or snappy; none if you prefer
KAFKA_DIAL_TIMEOUT_MS=3000
KAFKA_WRITE_TIMEOUT_MS=5000
